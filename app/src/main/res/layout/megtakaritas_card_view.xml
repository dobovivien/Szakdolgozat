<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:layout_gravity="center_horizontal"
    android:backgroundTint="@color/gray3"
    app:cardCornerRadius="15dp">

    <TextView
        android:id="@+id/megnevezesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Megnevezés"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Cél teljesítésének dátuma:"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/celDatumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Lejárat dátuma"
        android:textSize="15dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/minMaxTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginRight="20dp"
        android:text="0"
        android:layout_gravity="right"
        android:textSize="13dp" />

    <Button
        android:id="@+id/osszegHozzaadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="összeg hozzáadása"
        android:textSize="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/osszegLevonButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="összeg levonása"
        android:textSize="10dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/megtakaritasImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="330dp"
        android:src="@drawable/ic_delete"/>

</androidx.cardview.widget.CardView>