<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/ertesitesCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:backgroundTint="@color/gray3"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/alKategoriaSettingImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_dollar" />

        <TextView
            android:id="@+id/alkategoriaSettingTextView"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:textSize="20sp"
            android:text="Alkategória neve"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/editSettingImageView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="270dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_edit_black" />

        <ImageView
            android:id="@+id/deleteSettingImageView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="310dp"
            android:src="@drawable/ic_delete_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Értesítés ideje:"
            android:textSize="17dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minden hónap x-edik napja"
            android:textSize="15dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"/>

        <Switch
            android:id="@+id/kikapcsolSwitch"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="50dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>